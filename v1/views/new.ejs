<%- include("partials/header") %>

<div class="container">

    <div>      
        <div class="row">
            <h1 style="text-align: center">Add a Campground</h3>
            <div style="width: 30%; margin: 50px auto">
                
                <form action="/campgrounds" method="post">
                    <div class="form-group">
                        <input class="form-control" type="text" name="campgroundname" placeholder="Campground Name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="campgroundimg" placeholder="URL of campground image">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-block btn-primary">Submit!</button>
                    </div>
                    
                </form>                
                <a href="/campgrounds">Go back</a>
            </div>
        </div>
    </div>

</div>
<%- include("partials/footer") %>