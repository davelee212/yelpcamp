<%- include("../partials/header") %>

<div class="container">

    <div>      
        <div class="row">
            <h1 style="text-align: center">New Comment for <%= campground.name %></h3>
            <div style="width: 30%; margin: 50px auto">
                
                <form action="/campgrounds/<%= campground._id %>/comments" method="post">
                    
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="your comment">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[author]" placeholder="your name">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-block btn-primary">Submit!</button>
                    </div>
                                        
                </form>                
                <a href="/campgrounds/<%= campground._id %>">Go back</a>
            </div>
        </div>
    </div>

</div>
<%- include("../partials/footer") %>